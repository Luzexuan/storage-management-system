EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=仓库管理系统 <noreply@storage.com>

# 短信配置（可选）
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
