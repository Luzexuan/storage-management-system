# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=storage_management

# JWT密钥
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# 邮件配置（用于发送归还提醒）
